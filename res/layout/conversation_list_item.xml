<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="6dp" >
    <ImageView
        android:id="@+id/conversation_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_wenzhuanbao" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@id/conversation_user_icon"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/conversation_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Star"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/conversation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[帮吗红包]"
            android:layout_marginTop="4dp"
            android:textColor="@color/deep_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/conversation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="星期五"
        android:textColor="@color/deep_gray" />

</RelativeLayout>


<TextView 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray"/>
</LinearLayout>