<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <ImageView
        android:id="@+id/global_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_wenzhuanbao" />

    <TextView
        android:id="@+id/global_user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aileena"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/global_header_icon"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/global_user_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="100001" />
    </RelativeLayout> 
    
        <TextView

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_gray"
        />
        
        
        
    </LinearLayout>

