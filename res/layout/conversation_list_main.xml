<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96px"
        layout="@layout/titlebar"
        android:layout_alignParentTop="true"
        android:id="@+id/message_title_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:id="@+id/conversation_tips"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="10sp"
        android:text="温馨提示：超过24小时不理TA就会失去TA哦~"
        android:layout_below="@id/message_title_bar"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"/>
    
	<com.help.listview.XListView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
	    android:id="@+id/conversation_list"
        android:layout_below="@+id/conversation_tips">
    </com.help.listview.XListView>

</RelativeLayout>
